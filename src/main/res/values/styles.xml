<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:visible">false</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="template_switch_dark">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/title_activity_main</item>
        <item name="android:layout_marginStart">@dimen/size_large</item>
        <item name="android:layout_marginEnd">@dimen/size_large</item>
        <item name="android:layout_marginBottom">@dimen/size_small</item>
        <item name="android:layout_marginTop">@dimen/size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:checked">false</item>
    </style>

</resources>
